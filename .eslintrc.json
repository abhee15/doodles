{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "globals": {
    "Phaser": "readonly",
    "COLORS": "readonly",
    "TYPOGRAPHY": "readonly",
    "LAYOUT": "readonly",
    "createGameConfig": "readonly",
    "getResponsivePosition": "readonly",
    "getCenterPosition": "readonly",
    "isMobileDevice": "readonly",
    "getResponsiveFontSize": "readonly",
    "setupResponsiveResize": "readonly",
    "createButton": "readonly",
    "createCard": "readonly",
    "createProgressBar": "readonly",
    "createScoreDisplay": "readonly",
    "createModal": "readonly",
    "ButtonVariants": "readonly",
    "ButtonSizes": "readonly",
    "GameNavigation": "readonly",
    "gameNav": "writable",
    "gameAnalytics": "readonly",
    "gtag": "readonly",
    "dataLayer": "writable",
    "createSimplifiedStoryCard": "readonly",
    "createElementVisual": "readonly",
    "createProfessionalKeywordCard": "readonly",
    "createProfessionalRhymePeg": "readonly",
    "initGamification": "readonly"
  },
  "rules": {
    "no-unused-vars": [
      "warn",
      {
        "argsIgnorePattern": "^_",
        "varsIgnorePattern": "^_"
      }
    ],
    "no-console": [
      "warn",
      {
        "allow": ["warn", "error", "info"]
      }
    ],
    "no-debugger": "warn",
    "eqeqeq": ["error", "always"],
    "curly": ["error", "all"],
    "brace-style": ["error", "1tbs"],
    "indent": ["warn", 2],
    "quotes": ["error", "single", { "avoidEscape": true }],
    "semi": ["error", "always"],
    "comma-dangle": ["error", "never"],
    "no-trailing-spaces": "error",
    "no-multiple-empty-lines": ["error", { "max": 2 }],
    "space-before-function-paren": [
      "error",
      {
        "anonymous": "always",
        "named": "never",
        "asyncArrow": "always"
      }
    ],
    "keyword-spacing": "error",
    "space-infix-ops": "error",
    "no-var": "error",
    "prefer-const": "error",
    "no-implicit-globals": "error",
    "no-eval": "error",
    "no-implied-eval": "error",
    "prefer-template": "warn"
  }
}
